@model SkinCareProject.Models.User

@{
    ViewBag.Title = "Login";
    Layout = null; // لمنع استخدام أي Layout
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="description" content="Skincare" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <style>
        /* نفس التنسيقات من صفحة التسجيل */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background-color: white;
            font-family: 'Arial', sans-serif;
            min-height: 100vh;
            position: relative;
        }

        .login-container {
            background-color: #FDF8F6;
            padding: 35px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            width: 92%;
            max-width: 500px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

            .login-container label {
                display: block;
                text-align: left;
                margin: 8px 0 10px;
                color: #555;
                font-size: 15px;
                font-weight: 500;
            }

            .login-container input,
            .login-container button {
                width: 100%;
                padding: 14px 16px;
                font-size: 15px;
                border-radius: 8px;
                border: 1px solid #ddd;
                margin-bottom: 18px;
                transition: all 0.3s ease;
            }

            .login-container input {
                background-color: #fff;
                border: 1px solid #ccc;
            }

                .login-container input:focus {
                    border-color: #BB8F8B;
                    outline: none;
                    box-shadow: 0 0 0 3px rgba(187, 143, 139, 0.2);
                }

            .login-container button {
                background-color: #BB8F8B;
                color: white;
                border: none;
                cursor: pointer;
                font-weight: 500;
                letter-spacing: 0.5px;
                margin-top: 8px;
            }

                .login-container button:hover {
                    background-color: #a07a77;
                    transform: translateY(-1px);
                }

        h2 {
            color: #BB8F8B;
            margin-bottom: 28px;
            font-size: 26px;
            font-weight: 600;
        }

        .password-wrapper {
            position: relative;
            margin-bottom: 5px;
        }

        .toggle-password {
            position: absolute;
            top: 50%;
            right: 16px;
            transform: translateY(-50%);
            cursor: pointer;
            color: #777;
            font-size: 18px;
            user-select: none;
        }

        .text-danger {
            color: #e74c3c;
            font-size: 15px;
            margin: -10px 0 12px;
            text-align: left;
            display: block;
        }

        input::-ms-reveal,
        input::-ms-clear,
        input::-webkit-credentials-auto-fill-button,
        input::-webkit-password-toggle-button,
        input::-webkit-password-reveal-button {
            display: none !important;
            visibility: hidden !important;
            pointer-events: none !important;
            height: 0 !important;
            width: 0 !important;
            margin: 0 !important;
            padding: 0 !important;
        }

        /* تعديل لون رابط Sign up */
        .signup-link {
            color: #BB8F8B;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .signup-link:hover {
                color: #8b6f6c;
                text-decoration: underline;
                cursor: pointer;
            }

        /* رسالة النجاح */
        .alert-success {
            background-color: #d4edda;
            border-color: #c3e6cb;
            color: #155724;
            padding: 10px 15px;
            margin-bottom: 15px;
            border-radius: 5px;
            font-size: 14px;
        }
    </style>
</head>

<body>
    <div class="login-container">
        <h2>Login</h2>

        @* عرض رسالة النجاح لو موجودة *@
        @if (ViewBag.Message != null)
        {
            <div class="alert-success">
                @ViewBag.Message
            </div>
        }

        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-login" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <label for="email">Email Address</label>
            @Html.TextBoxFor(m => m.email, new
            {
                @type = "email",
                @class = "form-control",
                @id = "email",
                required = "required",
                placeholder = "Enter your email"
            })
            @Html.ValidationMessageFor(m => m.email, "", new { @class = "text-danger" })

            <label for="password">Password</label>
            <div class="password-wrapper">
                @Html.PasswordFor(m => m.password, new
                {
                    @class = "form-control",
                    @id = "password",
                    required = "required",
                    placeholder = "Enter your password"
                })
                <i class="bi bi-eye toggle-password" id="togglePassword1"></i>
            </div>
            @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger" })

            <button type="submit">Login</button>
            <p>Don't have an account? @Html.ActionLink("Sign up", "Register", "Home", null, new { @class = "signup-link" })</p>
        }
    </div>

    <script>
        // إظهار/إخفاء كلمة المرور
        document.querySelectorAll('.toggle-password').forEach(icon => {
            icon.addEventListener('click', function () {
                const input = this.previousElementSibling;
                const isPassword = input.type === 'password';
                input.type = isPassword ? 'text' : 'password';
                this.classList.toggle('bi-eye');
                this.classList.toggle('bi-eye-slash');
            });
        });
    </script>
</body>

</html>
